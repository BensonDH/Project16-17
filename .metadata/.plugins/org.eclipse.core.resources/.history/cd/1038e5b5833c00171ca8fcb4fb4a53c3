package asteroids.programs.exceptions;

import asteroids.programs.expressions.Expression;

public class IllegalTypeException extends RuntimeException {

	public IllegalTypeException(Class<?> expectedClass, Class<?> actualClass, Expression condition){
		this.acutalClass = actualClass;
		this.expectedClass = expectedClass;
		this.condition = condition;
	}

	/**
	 * Get type that was expected
	 */
	public Class<?> getExpectedClass() {
		return this.expectedClass;
	}
	
	private final Class<?> expectedClass;
	
	/**
	 * Get the actual class that was passed before this exception occured.
	 */
	public Class<?> getActualClass() {
		return this.acutalClass;
	}
	
	private final Class<?> acutalClass;
	
	/**
	 * Get the expression that cannot be used as the condition of a WhileStatement.
	 */
	public Expression getCondition(){
		return this.condition;
	}
	
	private final Expression condition;
	
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
}
