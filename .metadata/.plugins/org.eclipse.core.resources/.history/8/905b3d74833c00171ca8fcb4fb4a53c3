package asteroids.programs.exceptions;

import asteroids.programs.expressions.Expression;

public class IllegalTypeException extends RuntimeException {

	public IllegalTypeException(Expression condition){
		this.condition = condition;
	}

	/**
	 * Get the expression that cannot be used as the condition of a WhileStatement.
	 */
	public Expression getCondition(){
		return this.condition;
	}
	
	private final Expression condition;
	
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
}
