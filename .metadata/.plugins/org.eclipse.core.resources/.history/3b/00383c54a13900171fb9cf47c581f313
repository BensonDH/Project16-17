package asteroids.tests;

import static org.junit.Assert.*;

import java.util.*;
import java.util.stream.Collectors;

import org.junit.*;
import asteroids.model.*;

public class RandomTests {
	@Test
	public void test(){
	Ship ship1 = new Ship(0,0,0,0,20,0);
	Ship ship2 = new Ship(0,0,0,0,20,0);
	Ship ship3 = new Ship(0,0,0,0,20,0);
	Ship ship4 = new Ship(0,0,0,0,20,0);
	Ship ship5 = new Ship(0,0,0,0,20,0);
	
	Set<Entity> temp = new HashSet<Entity>();
	
	temp.add(ship1);
	temp.add(ship2);
	temp.add(ship3);
	temp.add(ship4);
	temp.add(ship5);
	
	Set <Entity> result = temp.stream().filter(w -> w.getClass() == ship1.getClass()).collect(Collectors.toSet());
	
	System.out.println(result);
	}
}